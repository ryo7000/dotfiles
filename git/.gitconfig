[user]
    name = ryo
    email = ryo@live-emotion.com
[core]
    excludesfile = /home/ryo/.gitignore
[alias]
    di = diff
    ci = commit
    co = checkout
    st = status
    dix = diff --cached
    logx = log --pretty=format:\"%Cgreen%h %ad %Cblue%cn %Cred%d %Creset%s\" --graph --date=short --full-history --all
    mg = merge --no-ff
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto

# カレントブランチと同名のリモートブランチが存在する場合のみ
# カレントブランチのpushが行われる
[push]
    default = simple

# master上でgit mergeする時は常に--no-ff (Merge commitを作成)
# git pullする時はmergeではなくrebase
[branch "master"]
    mergeoptions = --no-ff
    rebase = true

[url "https://"]
	insteadOf = git://
